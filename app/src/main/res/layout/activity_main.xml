<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/login_backround"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/icon_logo" />

<!--        <EditText-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="40dp"-->
<!--            android:hint="שם משתמש"-->
<!--            android:gravity="right"-->
<!--            android:textColor="#213646"-->
<!--            android:textColorHint="#213646"-->
<!--            android:textSize="20sp"-->
<!--            android:background="@drawable/rounded_corner"-->
<!--            android:padding="18dp"-->
<!--            android:inputType="text"-->
<!--            android:id="@+id/Username_input"/>-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="מייל"
            android:gravity="right"
            android:textColor="#213646"
            android:textColorHint="#213646"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:id="@+id/email_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="הכנס קוד אימות"
            android:gravity="right"
            android:textColor="#213646"
            android:textColorHint="#213646"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:inputType="number"
            android:id="@+id/Verification_code_input"
            android:visibility="gone"/>

        <Button
            android:id="@+id/verify_code_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F3EFE4"
            android:padding="10dp"
            android:text="אמת קוד"
            android:textColor="#213646"
            android:textSize="18sp"
            android:visibility="gone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="סיסמא"
            android:gravity="right"
            android:textColor="#213646"
            android:textColorHint="#213646"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:inputType="textPassword"
            android:id="@+id/Password_input"/>

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#161313"
            android:visibility="gone"
            android:text="Password must contain both letters and numbers, and at least 6 characters long" />

        <Button
            android:id="@+id/Login_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:backgroundTint="#F3EFE4"
            android:padding="10dp"
            android:text="התחברות"
            android:textColor="#213646"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="#F3EFE4"
            android:padding="5dp"
            android:text="הרשמה"
            android:textColor="#213646"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="דרך התחברות נוספת:"
            android:textColor="#213646"
            android:layout_marginTop="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:id="@+id/facebook_button"
                android:src="@drawable/facebook"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:id="@+id/linkedin_button"
                android:src="@drawable/linkedin"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
