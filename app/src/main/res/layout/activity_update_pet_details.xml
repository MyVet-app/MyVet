<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/login_backround">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="פרטי חיה"
            android:textColor="#213646"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם"
            android:textSize="18sp"
            android:textColor="#213646" />

        <EditText
            android:id="@+id/PetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שדה חובה"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="גיל"
            android:textSize="18sp"
            android:textColor="#213646" />

        <EditText
            android:id="@+id/PetAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שדה חובה"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="16dp"
            android:inputType="number"
            android:gravity="right"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="זן"
            android:textSize="18sp"
            android:textColor="#213646" />

        <EditText
            android:id="@+id/typeOfPet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שדה חובה"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="משקל"
            android:textSize="18sp"
            android:textColor="#213646" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מין"
            android:textSize="18sp"
            android:textColor="#213646" />

        <EditText
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הסטוריה רפואית"
            android:textSize="18sp"
            android:textColor="#213646" />

        <EditText
            android:id="@+id/medicalHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שדה חובה"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#161313"
            android:visibility="gone"
            android:text="לא כל השדות מלאים" />

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עדכון פרטים"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>