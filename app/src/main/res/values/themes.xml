    <style name="titles">
        <!-- צבע הטקסט -->
        <item name="android:textColor">#FF000000</item>
        <!-- גודל גופן -->
        <item name="android:textSize">24sp</item>
        <!-- סגנון גופן -->
        <item name="android:fontFamily">@font/roberto</item>
        <!-- יישור טקסט -->
        <item name="android:gravity">center</item>
        <!-- ריווח בין האותיות (אופציונלי) -->
        <item name="android:letterSpacing">0.02</item>
        <!-- שולי טקסט -->
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="buttonStyle">
        <!-- רקע הכפתור - ירוק -->
        <item name="android:backgroundTint">#BFFF80</item>

        <!-- צבע הטקסט בלחצן - לבן -->
        <item name="android:textColor">#FF000000</item>

        <!-- גודל גופן -->
        <item name="android:textSize">18sp</item>

        <!-- יישור טקסט במרכז -->
        <item name="android:gravity">center</item>

        <!-- גובה ורוחב כפתור -->
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">48dp</item>

        <!-- רדיוס פינות (כפתור עם קצוות מעוגלים) -->
        <item name="android:background">@drawable/rounded_corner</item>

        <!-- הצללה קלה לכפתור (משפר את הנראות והמודרניות) -->
        <item name="android:elevation">4dp</item>

        <!-- שינוי גופן הכפתור (לפי הפונט המוגדר שלך) -->
        <item name="android:fontFamily">@font/roberto</item>


    </style>

</resources>